<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
	xmlns:gap   = "http://phonegap.com/ns/1.0"
	id          = "com.tomsource.worldcupgame"
	versionCode = "11" 
	version     = "3.8.0" >

    <name>Football Card</name>

    <description>
        Football Card Cup 2014
    </description>

    <author href="https://build.phonegap.com" email="tomforray@gmail.com">
        Tamas Forray 
    </author>
	
	<gap:platform name="ios" />
	<gap:platform name="android" />
	<gap:platform name="winphone" />
	<preference name="target-device" value="handset" /> 
	
	<!-- iOS Only -->
	<preference name="phonegap-version" value="cli-5.2.0"/> 
	<preference name="orientation" value="portrait" />
	<!-- <preference name="fullscreen" value="true" /> -->
	<preference name="prerendered-icon" value="true" />
	<preference name="detect-data-types" value="true" />
	<preference name="exit-on-suspend" value="true" />
	
	<!-- Android Only -->
	<preference name="android-minSdkVersion" value="10" />
	<preference name="android-installLocation" value="auto" />
	<preference name="splash-screen-duration" value="1000"/>
	
	<!-- ICONS -->
	<!-- iPhone / iPod Touch  -->
	<icon src="icons/icon-60.png" gap:platform="ios" width="60" height="60" />
	<icon src="icons/icon-60@2x.png" gap:platform="ios" width="120" height="120" />
	
	<!-- iPad -->
	<icon src="icons/icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="icons/icon-76@2x.png" gap:platform="ios" width="152" height="152" />
	
	<!-- Settings Icon -->
	<icon src="icons/icon-small.png" gap:platform="ios" width="29" height="29" />
	<icon src="icons/icon-small@2x.png" gap:platform="ios" width="58" height="58" />
	
	<!-- Spotlight Icon -->
	<icon src="icons/icon-40.png" gap:platform="ios" width="40" height="40" />
	<icon src="icons/icon-40@2x.png" gap:platform="ios" width="80" height="80" />
	
	<!-- iPhone / iPod Touch -->
	<icon src="icons/icon.png" gap:platform="ios" width="57" height="57" />
	<icon src="icons/icon@2x.png" gap:platform="ios" width="114" height="114" />
	
	<!-- iPad -->
	<icon src="icons/icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="icons/icon-72@2x.png" gap:platform="ios" width="144" height="144" />
	
	<!-- iPhone Spotlight and Settings Icon -->
	<icon src="icons/icon-small.png" gap:platform="ios" width="29" height="29" />
	<icon src="icons/icon-small@2x.png" gap:platform="ios" width="58" height="58" />
	
	<!-- iPad Spotlight and Settings Icon -->
	<icon src="icons/icon-50.png" gap:platform="ios" width="50" height="50" />
	<icon src="icons/icon-50@2x.png" gap:platform="ios" width="100" height="100" />
	
	<!-- Android Icon -->
	<icon src="ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
	<icon src="mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
	<icon src="xxhdpi.png" gap:platform="android" gap:qualifier="xxhdpi" />
	<icon src="fr-xxhdpi.png" gap:platform="android" gap:qualifier="fr-xxhdpi" />
	
	
	<!-- SPLASH SCREENS -->
	<!-- iPhone and iPod touch -->
	<gap:splash src="icons/Default.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="icons/Default@2x.png" gap:platform="ios" width="640" height="960" />
	
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="icons/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />
	
	<!-- iPad -->
	<gap:splash src="icons/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
	
	<!-- Android icons -->
	<gap:splash src="ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
	<gap:splash src="mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
	<gap:splash src="hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
	<gap:splash src="xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
	<gap:splash src="fr-xhdpi.png" gap:platform="android" gap:qualifier="fr-xhdpi" />
	<gap:splash src="portrait-xxhdpi.png" gap:platform="android" gap:qualifier="port-xxhdpi" />
	<gap:splash src="landscape-xxhdpi.png" gap:platform="android" gap:qualifier="land-xxhdpi" />
	
	<gap:plugin name="org.apache.cordova.SplashScreen"/>
	<preference name="AutoHideSplashScreen" value="false" />
	
	<gap:plugin name="org.apache.cordova.statusbar" version="0.1.4" />

</widget>